{
    "manifest_version": 3,
    "name": "Shadow Bot - Quick Join",
    "version": "1.1.0",
    "description": "Quickly join meetings and record them with Shadow Bot.",
    "permissions": [
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "http://localhost:3000/*",
        "http://localhost:3005/*",
        "https://meet.google.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}